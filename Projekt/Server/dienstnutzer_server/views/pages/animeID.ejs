<!-- views/pages/anime.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>Anime</h1>
            
    
            <ul>  
            <p>Name: <%= animeData.name %></p>
            <p>Name_Jap: <%= animeData.name_jap %></p>
            <p>Episodes: <%= animeData.episodes %></p>
            <p>Release: <%= animeData.release %></p>
            <p>Release_Jap: <%= animeData.release_jap %></p>
            <p>License: <%= animeData.license %></p>
            <p>status: <%= animeData.status %></p>
            <% refData.forEach(function(refs) { %>
                <p><%= refs.name %></p>
            <% }); %>
            </ul>
            
            
        </div>
        
    
        
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>