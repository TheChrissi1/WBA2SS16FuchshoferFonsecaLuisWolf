<!-- views/pages/registration.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container" id="body">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="jumbotron">
            <h2 id="headline" class="headline">User Registration</h2>

            <section class="content">
              <div>
                <form method="put">
                  <div class="form-group">
                    <label for="firstName">First name</label>
                    <input type="text" id="firstName" class="form-control" required />
                  </div>
                  <div class="form-group">
                    <label for="lastName">Last name</label>
                    <input type="text" id="lastName" class="form-control" required />
                  </div>
                  <div class="form-group">
                    <labelsP for="e-mail">E-Mail</label>
                    <input type="text" id="e-mail" class="form-control" onblur="validateEmail()" required />
                  </div>
                  <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" class="form-control" onblur="inputUsername()" required />
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" class="form-control" required/>
                  </div>
                  <div class="form-group">
                    <button id="save_button" class="btn btn-primary" onclick="return register()">Save</button>
                    <button class="btn btn-danger" ng-click="vm.deleteUser()">Delete</button>
                  </div>
                </form>
              </div>
            </section>
        </div>


        <script src="../js/javascript.js"></script>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>
