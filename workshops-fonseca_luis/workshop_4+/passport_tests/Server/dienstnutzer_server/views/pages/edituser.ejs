<!-- views/pages/edituser.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container" id="body">
    <header>
        <% include ../partials/header %>
    </header>
    <main>
        <div class="jumbotron">
            <h2 id="headline" class="headline">Edit User <span id="username"><%=userData.username%></span> [<span id="user_id"><%=userData.user_id%></span>]</h2>

            <section class="content">
              <div>
                <form method="put">
                  <div class="form-group">
                    <label for="user_name">Name *</label>
                    <input type="text" id="user_name" class="form-control" value="<%= userData.name %>" required/>
                  </div>
                  <div class="form-group">
                    <label for="user_lastname">Lastname *</label>
                    <input type="text" id="user_lastname" class="form-control" value="<%= userData.lastname %>" required/>
                  </div>
                  <div class="form-group" id="user_authority_all">
                    <label for="user_authority">Authority *</label>
                    <input type="text" id="user_authority" class="form-control" value="<%= userData.authority %>" required/>
                  </div>
                  <div class="form-group">
                    <label for="user_email">E-mail *</label>
                    <input type="text" id="user_email" class="form-control" value="<%= userData.email %>" required/>
                  </div>
                  <div class="form-group">
                    <label for="user_gender">Gender</label>
                    <select type="text" id="user_gender" class="form-control">
                      <option id="0" value="0">None</option>
                      <option id="1" value="1">Female</option>
                      <option id="2" value="2">Male</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="user_birthdate">Birthdate (DD.MM.JJJJ)</label>
                    <input type="text" id="user_birthdate" class="form-control" value="<%= userData.birthdate %>" />
                  </div>
                  <div class="form-group">
                    <button id="save_button" class="btn btn-primary" onclick="sendUser()">Save</button>
                  </div>
                </form>
              </div>
            </section>
        </div>
        <script src="../js/edit_user.js"></script>

    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>
